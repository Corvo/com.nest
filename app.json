{
  "id": "com.nest",
  "version": "1.0.0",
  "compatibility": ">=0.1.0",
  "name": {
    "en": "Nest",
    "nl": "Nest"
  },
  "description": {
    "en": "This app lets you control your Nest Thermostat and Nest Protect",
    "nl": "Deze app laat jou je Nest Thermostaat en Nest Protect bedienen"
  },
  "category": "climate",
  "author": {
    "name": "Robin Bolscher",
    "email": "robin@athom.nl"
  },
  "images": {
    "large": "assets/images/large.png",
    "small": "assets/images/small.png"
  },
  "dependencies": {
    "firebase": "latest",
    "request": "latest",
    "underscore": "latest"
  },
  "permissions": [],
  "speech": [
  ],
  "drivers": [
    {
      "id": "nest_thermostat",
      "name": {
        "en": "Nest Thermostat",
        "nl": "Nest Thermostaat"
      },
      "images": {
        "large": "drivers/nest_thermostat/assets/images/large.jpg",
        "small": "drivers/nest_thermostat/assets/images/small.jpg"
      },
      "class": "thermostat",
      "capabilities": [
        "target_temperature",
        "measure_temperature"
      ],
      "pair": [
        {
          "id": "authorization"
        },
        {
          "id": "list_nests_thermostats",
          "template": "list_devices",
          "navigation": {
            "next": "add_nest_thermostats"
          }
        },
        {
          "id": "add_nest_thermostats",
          "template": "add_devices"
        }
      ]
    },
    {
      "id": "nest_protect",
      "name": {
        "en": "Nest Protect",
        "nl": "Nest Protect"
      },
      "images": {
        "large": "drivers/nest_protect/assets/images/large.jpg",
        "small": "drivers/nest_protect/assets/images/small.jpg"
      },
      "class": "sensor",
      "capabilities": [
        "alarm_co",
        "alarm_co2",
        "alarm_battery"
      ],
      "pair": [
        {
          "id": "authorization"
        },
        {
          "id": "list_nests_protects",
          "template": "list_devices",
          "navigation": {
            "next": "add_nest_protects"
          }
        },
        {
          "id": "add_nest_protects",
          "template": "add_devices"
        }
      ]
    }
  ]
}