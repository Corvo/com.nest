{
  "id": "com.nest",
  "version": "2.3.0",
  "compatibility": ">=1.0.0",
  "name": {
    "en": "Nest",
    "nl": "Nest"
  },
  "description": {
    "en": "This app lets you control your Nest Thermostat and Nest Protect",
    "nl": "Deze app laat jou je Nest Thermostat en Nest Protect bedienen"
  },
  "category": "climate",
  "author": {
    "name": "Athom B.V.",
    "email": "info@athom.com"
  },
  "contributors": {
    "developers": [
      {
        "name": "Fran√ßois Raeven",
        "email": "f.raeven@gmail.com"
      }
    ]
  },
  "images": {
    "large": "assets/images/large.png",
    "small": "assets/images/small.png"
  },
  "drivers": [
    {
      "id": "nest_thermostat",
      "name": {
        "en": "Nest Thermostat",
        "nl": "Nest Thermostaat"
      },
      "images": {
        "large": "drivers/nest_thermostat/assets/images/large.jpg",
        "small": "drivers/nest_thermostat/assets/images/small.jpg"
      },
      "class": "thermostat",
      "capabilities": [
        "target_temperature",
        "measure_temperature",
        "measure_humidity"
      ],
      "capabilitiesOptions": {
        "target_temperature": {
          "preventInsights": true,
          "min": 9,
          "max": 32
        },
        "measure_temperature": {
          "preventInsights": true
        },
        "measure_humidity": {
          "preventInsights": true
        }
      },
      "mobile": {
        "components": [
          {
            "capabilities": [],
            "id": "icon"
          },
          {
            "capabilities": [
              "measure_humidity",
              "measure_temperature"
            ],
            "id": "sensor"
          },
          {
            "capabilities": [
              "target_temperature"
            ],
            "id": "thermostat"
          }
        ]
      },
      "pair": [
        {
          "id": "authorization"
        },
        {
          "id": "list_nests_thermostats",
          "template": "list_devices",
          "navigation": {
            "next": "add_nest_thermostats"
          }
        },
        {
          "id": "add_nest_thermostats",
          "template": "add_devices"
        }
      ]
    },
    {
      "id": "nest_protect",
      "name": {
        "en": "Nest Protect",
        "nl": "Nest Protect"
      },
      "images": {
        "large": "drivers/nest_protect/assets/images/large.jpg",
        "small": "drivers/nest_protect/assets/images/small.jpg"
      },
      "class": "sensor",
      "capabilities": [
        "alarm_co",
        "alarm_smoke",
        "alarm_battery"
      ],
      "capabilitiesOptions": {
        "alarm_co": {
          "preventInsights": true
        },
        "alarm_smoke": {
          "preventInsights": true
        },
        "alarm_battery": {
          "preventInsights": true
        }
      },
      "pair": [
        {
          "id": "authorization"
        },
        {
          "id": "list_nests_protects",
          "template": "list_devices",
          "navigation": {
            "next": "add_nest_protects"
          }
        },
        {
          "id": "add_nest_protects",
          "template": "add_devices"
        }
      ]
    }
  ],
  "flow": {
    "triggers": [
      {
        "id": "away_status_changed",
        "title": {
          "en": "Away status changed to",
          "nl": "Away status gewijzigd naar"
        },
        "args": [
          {
            "name": "structure",
            "type": "autocomplete",
            "placeholder": {
              "en": "Which home",
              "nl": "Welk huis"
            }
          },
          {
            "name": "status",
            "type": "dropdown",
            "values": [
              {
                "id": "home",
                "label": {
                  "en": "Home",
                  "nl": "Home"
                }
              },
              {
                "id": "away",
                "label": {
                  "en": "Away",
                  "nl": "Away"
                }
              }
            ]
          }
        ]
      },
      {
        "id": "hvac_status_changed",
        "title": {
          "en": "HVAC status changed to",
          "nl": "HVAC status gewijzigd naar"
        },
        "args": [
          {
            "name": "status",
            "type": "dropdown",
            "values": [
              {
                "id": "heating",
                "label": {
                  "en": "Heating",
                  "nl": "Verwarmen"
                }
              },
              {
                "id": "cooling",
                "label": {
                  "en": "Cooling",
                  "nl": "Koelen"
                }
              },
              {
                "id": "off",
                "label": {
                  "en": "Off",
                  "nl": "Uit"
                }
              }
            ]
          },
          {
            "name": "deviceData",
            "type": "device",
            "filter": "driver_uri=homey:app:com.nest&driver_id=nest_thermostat"
          }
        ]
      },
      {
        "id": "hvac_mode_changed",
        "title": {
          "en": "HVAC mode changed to",
          "nl": "HVAC stand gewijzigd naar"
        },
        "args": [
          {
            "name": "mode",
            "type": "dropdown",
            "values": [
              {
                "id": "heat",
                "label": {
                  "en": "Heating",
                  "nl": "Verwarm"
                }
              },
              {
                "id": "cool",
                "label": {
                  "en": "Cooling",
                  "nl": "Koel"
                }
              },
              {
                "id": "heat-cool",
                "label": {
                  "en": "Heating and cooling",
                  "nl": "Verwarm en koel"
                }
              },
              {
                "id": "eco",
                "label": {
                  "en": "Eco",
                  "nl": "Eco"
                }
              },
              {
                "id": "off",
                "label": {
                  "en": "Off",
                  "nl": "Uit"
                }
              }
            ]
          },
          {
            "name": "deviceData",
            "type": "device",
            "filter": "driver_uri=homey:app:com.nest&driver_id=nest_thermostat"
          }
        ]
      },
      {
        "id": "measure_humidity_changed",
        "title": {
          "en": "The humidity changed",
          "nl": "De luchtvochtigheid is veranderd"
        },
        "tokens": [
          {
            "name": "measure_humidity",
            "type": "number",
            "title": {
              "en": "Humidity",
              "nl": "Luchtvochtigheid"
            },
            "example": {
              "en": "35"
            }
          }
        ],
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_uri=homey:app:com.nest&driver_id=nest_thermostat"
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "away_status",
        "title": {
          "en": "Away status !{{is|is not}}",
          "nl": "Away status !{{is|is niet}}"
        },
        "args": [
          {
            "name": "structure",
            "type": "autocomplete",
            "placeholder": {
              "en": "Which home",
              "nl": "Welk huis"
            }
          },
          {
            "name": "status",
            "type": "dropdown",
            "values": [
              {
                "id": "home",
                "label": {
                  "en": "Home",
                  "nl": "Home"
                }
              },
              {
                "id": "away",
                "label": {
                  "en": "Away",
                  "nl": "Away"
                }
              }
            ]
          }
        ]
      },
      {
        "id": "hvac_status",
        "title": {
          "en": "HVAC status !{{is|is not}}",
          "nl": "HVAC status !{{is|is niet}}"
        },
        "args": [
          {
            "name": "status",
            "type": "dropdown",
            "values": [
              {
                "id": "heating",
                "label": {
                  "en": "Heating",
                  "nl": "Verwarmen"
                }
              },
              {
                "id": "cooling",
                "label": {
                  "en": "Cooling",
                  "nl": "Koelen"
                }
              },
              {
                "id": "off",
                "label": {
                  "en": "Off",
                  "nl": "Uit"
                }
              }
            ]
          },
          {
            "name": "deviceData",
            "type": "device",
            "filter": "driver_uri=homey:app:com.nest&driver_id=nest_thermostat"
          }
        ]
      },
      {
        "id": "hvac_mode",
        "title": {
          "en": "HVAC mode !{{is|is not}}",
          "nl": "HVAC stand !{{is|is niet}}"
        },
        "args": [
          {
            "name": "status",
            "type": "dropdown",
            "values": [
              {
                "id": "heat",
                "label": {
                  "en": "Heating",
                  "nl": "Verwarm"
                }
              },
              {
                "id": "cool",
                "label": {
                  "en": "Cooling",
                  "nl": "Koel"
                }
              },
              {
                "id": "heat-cool",
                "label": {
                  "en": "Heating and cooling",
                  "nl": "Verwarm en koel"
                }
              },
              {
                "id": "eco",
                "label": {
                  "en": "Eco",
                  "nl": "Eco"
                }
              },
              {
                "id": "off",
                "label": {
                  "en": "Off",
                  "nl": "Uit"
                }
              }
            ]
          },
          {
            "name": "deviceData",
            "type": "device",
            "filter": "driver_uri=homey:app:com.nest&driver_id=nest_thermostat"
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "hvac_mode_set",
        "title": {
          "en": "Set HVAC mode to",
          "nl": "HVAC stand instellen op"
        },
        "args": [
          {
            "name": "mode",
            "type": "dropdown",
            "values": [
              {
                "id": "heat",
                "label": {
                  "en": "Heating",
                  "nl": "Verwarm"
                }
              },
              {
                "id": "cool",
                "label": {
                  "en": "Cooling",
                  "nl": "Koel"
                }
              },
              {
                "id": "heat-cool",
                "label": {
                  "en": "Heating and cooling",
                  "nl": "Verwarm en koel"
                }
              },
              {
                "id": "eco",
                "label": {
                  "en": "Eco",
                  "nl": "Eco"
                }
              },
              {
                "id": "off",
                "label": {
                  "en": "Off",
                  "nl": "Uit"
                }
              }
            ]
          },
          {
            "name": "deviceData",
            "type": "device",
            "filter": "driver_uri=homey:app:com.nest&driver_id=nest_thermostat"
          }
        ]
      },
      {
        "id": "hvac_mode_toggle",
        "title": {
          "en": "Toggle HVAC mode",
          "nl": "HVAC stand omschakelen"
        },
        "hint": {
          "en": "Toggle between Eco and the previously active HVAC mode",
          "nl": "Schakelen tussen Eco en de laatst actieve HVAC stand"
        },
        "args": [
          {
            "name": "deviceData",
            "type": "device",
            "filter": "driver_uri=homey:app:com.nest&driver_id=nest_thermostat"
          }
        ]
      }
    ]
  }
}
