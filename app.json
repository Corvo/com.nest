{
  "id": "com.nest",
  "version": "2.0.0",
  "compatibility": ">=0.8.39",
  "name": {
    "en": "Nest",
    "nl": "Nest"
  },
  "description": {
    "en": "This app lets you control your Nest Thermostat and Nest Protect",
    "nl": "Deze app laat jou je Nest Thermostat en Nest Protect bedienen"
  },
  "category": "climate",
  "author": {
    "name": "Athom B.V."
  },
  "images": {
    "large": "assets/images/large.png",
    "small": "assets/images/small.png"
  },
  "drivers": [
    {
      "id": "nest_thermostat",
      "name": {
        "en": "Nest Thermostat",
        "nl": "Nest Thermostaat"
      },
      "images": {
        "large": "drivers/nest_thermostat/assets/images/large.jpg",
        "small": "drivers/nest_thermostat/assets/images/small.jpg"
      },
      "class": "thermostat",
      "capabilities": [
        "target_temperature",
        "measure_temperature",
        "measure_humidity"
      ],
      "capabilitiesOptions": {
        "target_temperature": {
          "preventInsights": true,
          "min": 9,
          "max": 32
        },
        "measure_temperature": {
          "preventInsights": true
        },
        "measure_humidity": {
          "preventInsights": true
        }
      },
      "mobile": {
        "components": [
          {
            "capabilities": [
            ],
            "id": "icon"
          },
          {
            "capabilities": [
              "measure_humidity"
            ],
            "id": "sensor"
          },
          {
            "capabilities": [
              "measure_temperature"
            ],
            "id": "sensor"
          },
          {
            "capabilities": [
              "target_temperature"
            ],
            "id": "thermostat"
          }
        ]
      },
      "pair": [
        {
          "id": "authorization"
        },
        {
          "id": "list_nests_thermostats",
          "template": "list_devices",
          "navigation": {
            "next": "add_nest_thermostats"
          }
        },
        {
          "id": "add_nest_thermostats",
          "template": "add_devices"
        }
      ]
    },
    {
      "id": "nest_protect",
      "name": {
        "en": "Nest Protect",
        "nl": "Nest Protect"
      },
      "images": {
        "large": "drivers/nest_protect/assets/images/large.jpg",
        "small": "drivers/nest_protect/assets/images/small.jpg"
      },
      "class": "sensor",
      "capabilities": [
        "alarm_co",
        "alarm_smoke",
        "alarm_battery"
      ],
      "capabilitiesOptions": {
        "alarm_co": {
          "preventInsights": true
        },
        "alarm_smoke": {
          "preventInsights": true
        },
        "alarm_battery": {
          "preventInsights": true
        }
      },
      "pair": [
        {
          "id": "authorization"
        },
        {
          "id": "list_nests_protects",
          "template": "list_devices",
          "navigation": {
            "next": "add_nest_protects"
          }
        },
        {
          "id": "add_nest_protects",
          "template": "add_devices"
        }
      ]
    }
  ],
  "flow": {
    "triggers": [
      {
        "id": "away_status_changed",
        "title": {
          "en": "Away status changed to",
          "nl": "Away status gewijzigd naar"
        },
        "args": [
          {
            "name": "status",
            "type": "dropdown",
            "values": [
              {
                "id": "home",
                "label": {
                  "en": "Home",
                  "nl": "Home"
                }
              },
              {
                "id": "away",
                "label": {
                  "en": "Away",
                  "nl": "Away"
                }
              },
              {
                "id": "auto-away",
                "label": {
                  "en": "Auto away",
                  "nl": "Auto away"
                }
              }
            ]
          },
          {
            "name": "structure",
            "type": "autocomplete",
            "placeholder": {
              "en": "Which home",
              "nl": "Welk huis"
            }
          }
        ]
      },
      {
        "id": "hvac_status_changed",
        "title": {
          "en": "HVAC status changed to",
          "nl": "HVAC status gewijzigd naar"
        },
        "args": [
          {
            "name": "status",
            "type": "dropdown",
            "values": [
              {
                "id": "heating",
                "label": {
                  "en": "Heating",
                  "nl": "Verwarmen"
                }
              },
              {
                "id": "cooling",
                "label": {
                  "en": "Cooling",
                  "nl": "Koelen"
                }
              },
              {
                "id": "off",
                "label": {
                  "en": "Off",
                  "nl": "Uit"
                }
              }
            ]
          },
          {
            "name": "deviceData",
            "type": "device",
            "filter": "driver_uri=homey:app:com.nest&driver_id=nest_thermostat"
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "away_status",
        "title": {
          "en": "Away status !{{is|is not}}",
          "nl": "Away status !{{is|is niet}}"
        },
        "args": [
          {
            "name": "status",
            "type": "dropdown",
            "values": [
              {
                "id": "home",
                "label": {
                  "en": "Home",
                  "nl": "Home"
                }
              },
              {
                "id": "away",
                "label": {
                  "en": "Away",
                  "nl": "Away"
                }
              },
              {
                "id": "auto-away",
                "label": {
                  "en": "Auto away",
                  "nl": "Auto away"
                }
              }
            ]
          },
          {
            "name": "structure",
            "type": "autocomplete",
            "placeholder": {
              "en": "Which home",
              "nl": "Welk huis"
            }
          }
        ]
      },
      {
        "id": "hvac_status",
        "title": {
          "en": "HVAC status !{{is|is not}}",
          "nl": "HVAC status !{{is|is niet}}"
        },
        "args": [
          {
            "name": "status",
            "type": "dropdown",
            "values": [
              {
                "id": "heating",
                "label": {
                  "en": "Heating",
                  "nl": "Verwarmen"
                }
              },
              {
                "id": "cooling",
                "label": {
                  "en": "Cooling",
                  "nl": "Koelen"
                }
              },
              {
                "id": "off",
                "label": {
                  "en": "Off",
                  "nl": "Uit"
                }
              }
            ]
          },
          {
            "name": "deviceData",
            "type": "device",
            "filter": "driver_uri=homey:app:com.nest&driver_id=nest_thermostat"
          }
        ]
      }
    ]
  }
}